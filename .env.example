# ===================================
# 88 Company 환경 설정 예제
# ===================================
# 이 파일을 .env.local로 복사하여 사용하세요
# cp .env.example .env.local

# ===================================
# Supabase 설정
# ===================================
NEXT_PUBLIC_SUPABASE_URL=https://your_project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key

# ===================================
# SMS 프로바이더 설정
# ===================================
# 사용할 프로바이더 선택: demo | nhncloud | twilio | aligo
SMS_PROVIDER=nhncloud

# -----------------------------------
# NHN Cloud 설정 (추천 - 국내/국제 SMS)
# -----------------------------------
# https://console.toast.com 에서 확인
NHN_APP_KEY=your_app_key_here
NHN_SECRET_KEY=your_secret_key_here
NHN_SEND_NO=0212345678  # 사전 등록된 발신번호
NHN_PROJECT_ID=  # 선택사항
NHN_API_URL=https://api-sms.cloud.toast.com  # 기본값

# -----------------------------------
# Twilio 설정 (국제 SMS)
# -----------------------------------
# https://www.twilio.com/console 에서 확인
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890  # Twilio에서 구매한 전화번호

# -----------------------------------
# 알리고 설정 (국내 SMS 전용)
# -----------------------------------
# https://smartsms.aligo.in 에서 확인
ALIGO_API_KEY=your_api_key_here
ALIGO_USER_ID=your_user_id_here
ALIGO_SENDER=0212345678  # 사전 등록된 발신번호

# ===================================
# 보안 설정
# ===================================
# 관리자 인증용 시크릿 키 (선택사항)
ADMIN_SECRET_KEY=your_admin_secret_key_here

# ===================================
# 개발 설정
# ===================================
# 개발 모드에서 인증번호 표시 여부
SHOW_DEMO_CODE=true

# ===================================
# Rate Limiting 설정 (선택사항)
# ===================================
# 기본값이 있으므로 필요시에만 수정
# MAX_SMS_PER_HOUR=3
# MAX_SMS_PER_DAY=5
# BLOCK_DURATION_MINUTES=60